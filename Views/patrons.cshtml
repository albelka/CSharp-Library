@{
  Layout = "Shared/_Layout.cshtml";
}
      <h2>Welcome to your Library</h2><br>

      @if(@Model.Count == 0)
      {
        <h3>You will be our first patron!</h3>
      }
      <h2>Select your name to checkout a book:</h2><br>
      <ul>
        @foreach(var patron in @Model)
        {
          <li><h3><a href='/patron/@patron.GetId()'>@patron.GetName()</a>  | <a href="/patron/edit/@patron.GetId()">Edit</a> | <a href="/patron/delete/@patron.GetId()">Delete<a/></h3></li>
        }
      </ul><br>

      <h5><a href="/patrons/new">Sign up</a></h5>
      <h5><a href="/">Return home</a></h5><br>
